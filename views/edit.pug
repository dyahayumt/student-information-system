')
            h1
              | Edit Student Details
        body
          .form-group.row
            label.col-3.col-form-label(for='example-text-input') Student ID
            .col-9
              input#student_id.example-text-input.form-control(type='text', name='student_id', value=student_id, required)
          .form-group.row
            label.col-3.col-form-label(for='example-text-input') First Name
            .col-9
              input#firstName.form-control(type='text', name='first_name', value=first_name, required)
          .form-group.row
            label.col-3.col-form-label(for='middleName') Middle Name
            .col-9
              input#middleName.form-control(type='text', name='middle_name', value=middle_name, required)
          .form-group.row
            label.col-3.col-form-label(for='lastName') Last Name
            .col-9
              input#lastName.form-control(type='text', name='last_name', value=last_name, required)
          .form-group.row
            label.col-2(for="Gender") Gender
              .form-radio
              .radio
                  label
                    input(type="radio" name="radio" value="M" checked=sgender=="M", required) 
                    | Male
              .radio
                  label
                    input(type="radio" name="radio" value="F" checked=sgender=="F", required) 
                    | Female        
          .form-group.row
            label.col-3.col-form-label(for='placeBirth') Place Of Birth
            .col-9
              input#placeBirth.form-control(type='text', name='place_of_birth', value=place_of_birth, required)
          .form-group.row 
            label.col-3.col-form-label(for='dateBirth') Date of Birth
            .col-9
              input#dateBirth.form-control(type='date', name='date_of_birth', value=date_of_birth, min="1990-01-01", max="2006-01-01", required)
          .form-group.row
            label.col-3.col-form-label(for='phoneNumber') Phone Number
            .col-9
              input#phoneNumber.form-control(type='text' name='phone_number', value=phone_number, required)
          .form-group.row
            label.col-3.col-form-label(for='email') Email Address
            .col-9
              input#email.form-control(type='email', name='email_address', value=email_address, required)
          .form-group.row
            label.col-3.col-form-label(for='dateTime') Admission Date
            .col-9
              input#email.form-control(type='date', name='date_time', value=date_time,required)    
              input#oldId(type="hidden", name="oldId", value=sOldId)
        input.btn.btn-secondary(type='submit', value='Submit' onclick='checkEmail();')
