doctype html
html
  head
    meta(charset='”utf-8″')
    meta(name='”viewport”', content='”width=device-width,', initial-scale='1,', shrink-to-fit='no”')
    style.
      div.container {
      width: 100%;
      height: 500%;
      min-height: 100%;
      border: 1px #e5e5ff;
      }
      header{
      padding: 1em;
      clear: left;
      text-align: center;
      margin-bottom: 20px;
      border: 0px;
      }
      nav {
      float: left;
      max-width: 160px;
      margin: 0;
      padding: 1em;
      margin-top: 30px;
      margin-bottom: 5px;
      }
      nav ul {
      list-style-type: none;
      padding: 0;
      }
      nav ul a {
      text-decoration: none;
      }
      article {
      margin-left: 170px;
      padding: 2em;
      overflow: hidden;
      }
  body
     form(action="/updated-student" method="POST")
      .container
        header
          link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')
          .card.text-center(style='\
